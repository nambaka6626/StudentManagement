@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    
    <p class="text-center">Chào mừng, <strong>@ViewBag.UserName</strong>!</p>
    <p class="text-center">Vai trò của bạn: <strong>@ViewBag.UserRole</strong></p>

    @if (ViewBag.UserRole == "Admin")
    {
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h3>Admin Panel</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><a href="/Admin/ManageUsers" class="text-decoration-none">Quản lý người dùng</a></li>
                <li class="list-group-item"><a href="/Admin/ManageCourses" class="text-decoration-none">Quản lý khóa học</a></li>
            </ul>
        </div>
    </div>
    }
    else if (ViewBag.UserRole == "Faculty")
    {
    <div class="card mt-4">
        <div class="card-header bg-success text-white">
            <h3>Faculty Panel</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><a href="/Faculty/GradeStudents" class="text-decoration-none">Chấm điểm sinh viên</a></li>
            </ul>
        </div>
    </div>
    }
    else if (ViewBag.UserRole == "Student")
    {
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h3>Student Panel</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item"><a href="/Student/ViewCourses" class="text-decoration-none">Xem khóa học của bạn</a></li>
                <li class="list-group-item"><a href="/Student/ViewResults" class="text-decoration-none">Xem kết quả học tập</a></li>
            </ul>
        </div>
    </div>
    }
</div>

