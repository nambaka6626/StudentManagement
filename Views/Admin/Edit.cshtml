@model StudentManagement.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-4">
    <h2 class="text-center">Edit Course</h2>
    <form asp-action="Edit" method="post" class="w-50 mx-auto border p-4 rounded shadow">
        <input type="hidden" asp-for="Id" />




        <div class="mb-3">
            <label class="form-label">Course Name</label>
            <input asp-for="CourseName" class="form-control" required />

        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary w-100 mt-2">Cancel</a>
    </form>
</div>
