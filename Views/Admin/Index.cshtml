@model List<StudentManagement.Models.Course>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container text-center mt-4">
    <h2>Welcome, Admin!</h2>
    <p>You have access to the admin panel.</p>
    <a href="/Login/Logout" class="btn btn-danger mb-3">Logout</a>

    <h3>Courses List</h3>
    <a href="@Url.Action("Create", "Admin")" class="btn btn-success mb-3">Add New Course</a>

    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped mx-auto" style="width: 80%;">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Course Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="text-center">@course.Name</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Admin", new { id = course.CourseId })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "Admin", new { id = course.CourseId })" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No courses available.</p>
    }
</div>
