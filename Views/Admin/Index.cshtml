@model List<StudentManagement.Models.Course>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<head>
    <style>
        /* CSS ở đây */
        body {
            font-size: 1.2rem; /* Tăng kích thước font cho toàn bộ trang */
            line-height: 1.6; /* Tăng khoảng cách giữa các dòng */
        }

        h1, h2, h3, h4 {
            font-size: 2.5rem; /* Tăng kích thước chữ cho tiêu đề */
        }

        .table {
            font-size: 1.3rem; /* Tăng kích thước chữ trong bảng */
        }

        .btn {
            font-size: 1.3rem; /* Tăng kích thước chữ trong các nút */
            padding: 12px 20px;
        }

        /* Các CSS khác của bạn */
    </style>
</head>


<div class="container-fluid">
    <div class="row">
        <!-- Cột bên trái cho chức năng -->
        <div class="col-md-3 bg-light p-4">
            <h4 class="text-center">Admin Functions</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="@Url.Action("Create", "Admin")">Add New Course</a>
                </li>
                <li class="list-group-item">
                    <a href="@Url.Action("Index", "Admin")">Manage Courses</a>
                </li>
                <li class="list-group-item">
                    <a href="/Login/Logout">Logout</a>
                </li>
            </ul>
        </div>

        <!-- Cột bên phải cho thông tin -->
        <div class="col-md-9 p-4">
            <h2>Welcome, Admin!</h2>
            <p>You have access to the admin panel.</p>

            <h3>Courses List</h3>
            @if (Model.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseName</td> <!-- Hiển thị CourseName đúng -->
                                <td>
                                    <a href="@Url.Action("Edit", new { id = course.Id })" class="btn btn-warning btn-sm">Edit</a> |
                                    <a href="@Url.Action("Delete", new { id = course.Id })" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No courses available.</p>
            }
        </div>
    </div>
</div>
